# This playbook STOPS a compute farm

- name: Load the user's ssh credentials into an ssh-agent
  hosts: all
  connection: local
  tasks:
    - import_tasks: loadSshKey

- name: Stop the taskManager server
  hosts: guiServer
  connection: local
  roles:
    - taskManager

- name: Stop the cutelogActions server
  hosts: guiServer
  connection: local
  roles:
    - cutelogActions

