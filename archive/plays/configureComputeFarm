---
# This playbook STARTS a compute farm

- name: Install cutelogActions server
  hosts: localhost
  connection: local
  roles:
    - cutelogActions

- name: Install taskManager server
  hosts: localhost
  connection: local
  roles:
    - taskManager

- name: Load the user's ssh credentials into an ssh-agent
  hosts: localhost
  connection: local
  tasks:
    - import_tasks: loadSshKey

- name: Install worker script
  hosts: all
  roles:
    - allWorkers

- name: Install testWorkers
  hosts: all
  roles:
    - testWorker
