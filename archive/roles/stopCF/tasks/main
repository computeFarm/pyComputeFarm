---

# Stop the compute farm

- name: Stop testWorker services
  systemd:
    state: stopped
    daemon_reload: yes
    enabled: no
    masked: no
    scope: user
    name: testWorker.target

- name: Stop taskManager service
  when: inventory_hostname == 'localhost'
  systemd:
    state: stopped
    daemon_reload: yes
    enabled: no
    masked: no
    scope: user
    name: taskManager

- name: Stop cutelogActions service
  when: inventory_hostname == 'localhost'
  systemd:
    state: stopped
    daemon_reload: yes
    enabled: no
    masked: no
    scope: user
    name: cutelogActions
