# see:
# https://unix.stackexchange.com/questions/228277/grouping-systemd-services

[Unit]
Description=Start a compute farm GCC ARM Cross X86 Worker ({{aWorker}})
PartOf=gccARMCrossX86-Worker.target

[Service]
WorkingDirectory={{ ssh_home }}/.local/pyComputeFarm/files
ExecStart={{ ssh_home }}/.local/pyComputeFarm/bin/worker {{ aWorker }} {{ ssh_home }}/.local/pyComputeFarm/config/gccARMCrossX86-Config.yaml
Restart=always

[Install]
WantedBy=default.target
