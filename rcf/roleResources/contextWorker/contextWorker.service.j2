# https://unix.stackexchange.com/questions/228277/grouping-systemd-services

[Unit]
Description=Start a compute farm ConTeXt Worker
PartOf=contextWorker.target

[Service]
WorkingDirectory={{ ssh_home }}/.local/pyComputeFarm/files
ExecStart={{ ssh_home }}/.local/pyComputeFarm/bin/worker {{ ssh_home }}/.local/pyComputeFarm/config/contextConfig-{{aWorker}}.yaml
Restart=always

[Install]
WantedBy=default.target
