# see:
# https://unix.stackexchange.com/questions/228277/grouping-systemd-services

[Unit]
Description=Start a compute farm Z3 Worker ({{aWorker}})
PartOf=z3Worker.target

[Service]
WorkingDirectory={{ ssh_home }}/.local/pyComputeFarm/files
ExecStart=python {{ ssh_home }}/.local/pyComputeFarm/bin/worker.py {{ aWorker }} {{ ssh_home }}/.local/pyComputeFarm/config/z3Config.yaml
Restart=always

[Install]
WantedBy=default.target
