# see:
# https://unix.stackexchange.com/questions/228277/grouping-systemd-services

[Unit]
Description=Start a compute farm test worker ({{aWorker}})
PartOf=testWorker.target

[Service]
WorkingDirectory={{ ssh_home }}/.local/pyComputeFarm/tmp
ExecStart=python {{ ssh_home }}/.local/pyComputeFarm/bin/worker.py {{aWorker}} {{ ssh_home }}/.local/pyComputeFarm/config/runnerConfig-{{aWorker}}.yaml
Restart=always

[Install]
WantedBy=default.target
