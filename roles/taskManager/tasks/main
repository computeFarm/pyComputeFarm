---

# This playbook role sets up the cutelogActions GUI and computeFarm
# taskManager.

- name: Setup user's systemd
  file:
    path: "{{ ansible_facts.user_dir }}/.config/systemd/user"
    state: directory

###################################################################
# setup taskManager

- name: Create user's pyComputeFarm bin directory
  file:
    path: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/bin"
    state: directory

- name: Install user's taskManager and newTask scripts
  template:
    src: "{{ item }}.j2"
    dest: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/bin/{{ item }}"
    mode: u=rwx,g=rx,o=rx
  with_items:
    - taskManager
    - newTask

- name: Install user's taskManager service
  template:
    src: taskManager.service.j2
    dest: "{{ ansible_facts.user_dir }}/.config/systemd/user/taskManager.service"
    mode: u=rw,g-r,o=r

- name: Start taskManager service
  when: startComputeFarm is defined
  systemd:
    state: started
    daemon_reload: yes
    enabled: yes
    masked: no
    scope: user
    name: taskManager

- name: Stop taskManager service
  when: startComputeFarm is undefined
  systemd:
    state: stopped
    daemon_reload: yes
    enabled: no
    masked: no
    scope: user
    name: taskManager
