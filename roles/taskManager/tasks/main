---

# This playbook role sets up the cutelogActions GUI and computeFarm
# taskManager.

- name: Setup user's systemd
  file:
    path: "{{ ansible_facts.user_dir }}/.config/systemd/user"
    state: directory

###################################################################
# setup taskManager

- name: Create user's pyComputeFarm bin and config directories
  file:
    path: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/{{item}}"
    state: directory
  with_items:
    - bin
    - config

- name: Get the hashCheck.c code to compile it
  copy:
    src: hashCheck.c
    dest: /tmp/hashCheck.c
    mode: u=r,g=r,o=r

- name: compile the hashCheck.c code
  command:
    cmd: gcc -o hashCheck /tmp/hashCheck.c -lcrypto
    chdir: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/bin"
    creates: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/bin/hashCheck"

- name: Install user's taskManager and newTask scripts
  copy:
    src: "{{ item }}"
    dest: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/bin/{{ item }}"
    mode: u=rwx,g=rx,o=rx
  with_items:
    - taskManager
    - newTask

- name: Install user's taskManager and newTask config
  template:
    src: "{{ item }}.j2"
    dest: "{{ ansible_facts.user_dir}}/.local/pyComputeFarm/config/{{ item }}"
    mode: u=rwx,g=rx,o=rx
  with_items:
    - taskManager.yaml

- name: Install user's taskManager service
  template:
    src: taskManager.service.j2
    dest: "{{ ansible_facts.user_dir }}/.config/systemd/user/taskManager.service"
    mode: u=rw,g-r,o=r
