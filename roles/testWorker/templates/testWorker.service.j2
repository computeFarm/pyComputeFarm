[Unit]
Description=Start a compute farm testWorker
Partof=testWorker.target

[Service]
WorkingDirectory={{ ansible_facts.user_dir }}/.local/pyComputeFarm/tmp
ExecStart={{ ansible_facts.user_dir }}/.local/pyComputeFarm/bin/worker {{ ansible_facts.user_dir }}/.local/pyComputeFarm/config/runnerConfig-{{item}}.yaml
Restart=always

[Install]
WantedBy=default.target
